<UserControl x:Class="CarRentApp.Views.Users.Customer.CustomerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Background="#F3F4F6">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="400">

            <!-- Panel Title -->
            <TextBlock Text="Customer Panel"
                       FontSize="32"
                       FontWeight="Bold"
                       Foreground="#333"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20" />

            <!-- User Info -->
            <TextBlock x:Name="UserInfoTextBlock"
                       FontSize="18"
                       Foreground="#555"
                       HorizontalAlignment="Center"
                       TextAlignment="Center"
                       Margin="0,0,0,20" />

            <TabControl Width="700" Height="450">
                <TabItem Header="Rent">
                    <Grid Background="White" Margin="5">
                    </Grid>
                </TabItem>
                <TabItem Header="History">
                    <Grid Background="White" Margin="5">
                        <StackPanel Margin="10">
                            <TextBlock Text="Rented cars" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
                            
                            <DataGrid x:Name="RequestsDataGrid"
                                      AutoGenerateColumns="False"
                                      IsReadOnly="True"
                                      SelectionMode="Single"
                                      Height="300"
                                      CanUserAddRows="False"
                                      CanUserDeleteRows="False"
                                      Margin="0,0,0,10"
                                      RowBackground="#DFF0D8">
                                
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Request ID" Binding="{Binding Id}" Width="*" />
                                    <DataGridTextColumn Header="Car ID" Binding="{Binding CarId}" Width="*" />
                                    <DataGridTextColumn Header="Start Date" Binding="{Binding StartDate}" Width="*" />
                                    <DataGridTextColumn Header="End Date" Binding="{Binding EndDate}" Width="*" />
                                    <DataGridTextColumn Header="Accepted" Binding="{Binding IsAccepted}" Width="*" />
                                </DataGrid.Columns>
                            </DataGrid>
                        </StackPanel>
                    </Grid>
                </TabItem>
            </TabControl>
            
            <!-- Logout Button -->
			<Button Content="Logout"
                    Height="40"
                    Width="200"
                    Background="#0078D7"
                    Foreground="White"
                    FontWeight="Bold"
                    BorderThickness="0"
                    Margin="20,20,0,0"
                    HorizontalAlignment="Center"
                    Click="Logout_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
